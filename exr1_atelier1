
#include <iostream>
using namespace std;

int main() {

    char c = '\x01';
    short int p = 10;

    int expr1 = p + 3;           // 10 + 3 = 13
    int expr2 = c + 1;           // 1 + 1 = 2
    int expr3 = p + c;           // 10 + 1 = 11
    int expr4 = 3 * p + 5 * c;   // 3*10 + 5*1 = 35

    cout << "expr1 : p + 3" << endl;
    cout << "  Type   : int" << endl;
    cout << "  Valeur : " << expr1 << endl << endl;

    cout << "expr2 : c + 1" << endl;
    cout << "  Type   : int" << endl;
    cout << "  Valeur : " << expr2 << endl << endl;

    cout << "expr3: p + c" << endl;
    cout << "  Type   : int" << endl;
    cout << "  Valeur : " << expr3 << endl << endl;

    cout << " expr4 : 3 * p + 5 * c" << endl;
    cout << "  Type   : int" << endl;
    cout << "  Valeur : " << expr4 << endl;

    return 0;
}
