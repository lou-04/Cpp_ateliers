#include <iostream>
using namespace std;

int main() {
    char c = '\x05';
    int n = 5;
    long p = 1000;
    float x = 1.25;
    double z = 5.5;

    cout << "n+c+p = " << n + c + p << " (long)" << endl; \\ 1010
    cout << "2*x+c = " << 2*x + c << " (float)" << endl; \\7.5
    cout << "(char)n + c = " << (char)n + c << " (int)" << endl;\\10
    cout << "(float)z + n/2 = " << (float)z + n/2 << " (float)" << endl;\\7.5

    return 0;
}
